package:
  name: pyarrow
  version: 7.0.0
source:
  url: https://github.com/joemarshall/pyarrow-wasm/archive/refs/tags/7.0.0.tar.gz
  sha256: ${PYARROW_WASM_SHA256}
  extract_dir: pyarrow-wasm-7.0.0
test:
  imports:
    - pyarrow

requirements:
    run:
      - numpy

build:
    script: |
        mkdir -p build/pyodide/pyarrow 
        echo > build/pyodide/pyarrow/__init__.py
about:
  home: http://github.com/joemarshall/pyarrow-wasm
#  PyPI: 
  summary: pyarrow compiled for webassembly
  license: MIT
